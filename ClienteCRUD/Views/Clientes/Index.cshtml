@model IEnumerable<Cliente>
@{
    ViewBag.Title = "Clientes";
}

<h2>Clientes</h2>

@* <a href="@Url.Action("Create")">Novo Cliente</a> *@
<a asp-action="Create" class="btn btn-default">Novo Cliente</a>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                Id
            </th>
            <th>
                Nome
            </th>
            <th>
                Sexo
            </th>
            <th>
                Endereço
            </th>
            <th>
                Telefone
            </th>
            <th>
                Ações
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>@item.Sexo</td>
                <td>@item.Endereco</td>
                @foreach (var tel in item.Telefones)
                {
                    @if (tel.Ativo)
                    {
                        <td>@tel.Numero</td>
                    }
                }
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>