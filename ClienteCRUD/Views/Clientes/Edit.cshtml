@model Cliente
@{
    ViewBag.Title = "Editar Cliente";
}

<h2>Editar Cliente</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sexo" class="control-label"></label>
                <select asp-for="Sexo" class="form-control" asp-items="@(new SelectList(new List<string> { "Masculino", "Feminino", "Outro" }))"></select>
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            @if (Model.Telefones.Any())
            {
                <div class="form-group">
                    <label class="control-label">Telefone</label>
                    <div id="telefonesContainer">
                        @for (int i = 0; i < Model.Telefones.Count; i++)
                        {
                            <div class="form-check">
                                <input type="radio" name="TelefoneAtivoIndex" value="@i" id="ativo_@i" @(Model.Telefones[i].Ativo ? "checked" : "") />
                                <label class="form-check-label" for="ativo_@i">Ativo</label>

                                <input type="hidden" name="Telefones[@i].Ativo" value="false" />
                                @* <input type="text" name="Telefones[@i].Numero" value="@Model.Telefones[i].Numero" /> *@
                                <div class="telefoneItem">
                                    <p />
                                    @Html.TextBoxFor(model => model.Telefones[0].Numero, new { @class = "form-control", placeholder = "Número do telefone" })
                                    <p />
                                    <button type="button" class="btn btn-danger removeTelefone">Remover</button>
                                </div>
                            </div>
                        }

                        @* <div class="telefoneItem">
                            <p/>
                            @Html.TextBoxFor(model => model.Telefones[0].Numero, new { @class = "form-control", placeholder = "Número do telefone" })
                            <p/>
                            <button type="button" class="btn btn-danger removeTelefone">Remover</button>
                        </div> *@
                    </div>
                    <button type="button" class="btn btn-success" id="addTelefone">Adicionar Telefone</button>
                </div>

            }

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Voltar</a>
            </div>
        </form>
    </div>
</div>





@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            var telefoneIndex = 1;

            $('#addTelefone').click(function () {
                var telefoneHtml = `
                    <div class="telefoneItem">
                    <p/>
                        <input class="form-control" name="Telefone[` + telefoneIndex + `].Numero" placeholder="Número do telefone" type="text">
                        <p/>
                        <button type="button" class="btn btn-danger removeTelefone">Remover</button>
                        <p/>
                    </div>
                `;
                $('#telefonesContainer').append(telefoneHtml);
                telefoneIndex++;
            });

            $(document).on('click', '.removeTelefone', function () {
                $(this).closest('.telefoneItem').remove();
            });
        });
    </script>
}
